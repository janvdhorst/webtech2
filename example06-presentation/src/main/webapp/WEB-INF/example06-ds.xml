<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.jboss.org/ironjacamar/schema http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">
    <datasource jndi-name="java:jboss/datasources/example06"
                pool-name="example06-web" enabled="true"
                use-java-context="true">
        <connection-url>jdbc:h2:mem:example06;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;</connection-url>
        <!--<connection-url>jdbc:h2:file:${h2.path}</connection-url>-->
        <driver>h2</driver>
        <security>
            <user-name>sa</user-name>
            <password></password>
        </security>
    </datasource>
</datasources>